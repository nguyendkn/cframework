{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@core/*": ["./packages/core/src/*"],
      "@database/*": ["./packages/database/src/*"],
      "@minimal-api/*": ["./packages/minimal-api/src/*"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "jest.config.ts",
    "jest.setup.ts"
  ]
}
